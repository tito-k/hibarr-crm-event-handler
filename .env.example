# Server Configuration
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000
TZ=UTC

# Logging Configuration
LOG_DIR_NAME=logs
LOG_LEVEL=debug

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# Monitoring Configuration
ENABLE_METRICS=true
ALERT_QUEUE_ENABLED=true
ALERT_QUEUE_WAITING_THRESHOLD=50
ALERT_QUEUE_BACKLOG_MINUTES=5
ALERT_QUEUE_COOLDOWN_MINUTES=30
ALERT_RECIPIENTS=

# Authentication
API_KEY=your-secure-api-key-here

# CORS Configuration
CORS_ALLOWED_ORIGINS=*

# Database Configuration
DB_URI=mongodb://localhost:27017/hibarr-crm-event-handler

# Redis Configuration
REDIS_URI=redis://localhost:6379

# CRM Configuration
CRM_SERVER_URL=http://localhost:4000

# Meta Conversions API Configuration
# Note: These are demo values. Replace with actual Meta CAPI credentials
META_ACCESS_TOKEN=demo-meta-access-token
META_PIXEL_ID=demo-pixel-id
META_API_VERSION=v21.0

# Brevo (Email Service) Configuration
# Note: These are demo values. Replace with actual Brevo credentials
BREVO_API_KEY=demo-brevo-api-key
BREVO_SENDER_EMAIL=noreply@example.com
BREVO_SENDER_NAME=Hibarr CRM
